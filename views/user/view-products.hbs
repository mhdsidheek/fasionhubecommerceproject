    text-transform: capitalize;
    margin: 0 0 7px;
  }

  .product-grid .title a {
    color: var(--text-color);
    transition: all 500ms;
  }

  .product-grid .title a:hover {
    color: var(--main-color1);
  }

  .product-grid .price {
    color: var(--text-color);
    font-size: 18px;
