<section>
    <div class="container">
       <div class="container mt-4 ">
            <a href="/admin/add-product " class="btn btn-danger mb-3 float-end">Add Product +</a>
        </div>

        <table class="table ">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">price</th>
      <th>Image</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}

    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.orginalPrice}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt="" ></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit *</a>
        <a  href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
    var options = {
        width: 400,
        height: 400,
        zoomWidth: 400,
        offset: {vertical: 0,horizontal: 10},
        scale: .7
    }

    new ImageZoom(document.getElementById("img-container"), options)
</script>