

<section class="">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-light text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center ">
              
         
              <form action="/admin/admin-login" method="post">
            <div class="mb-md-5 mt-md-4 pb-5">
             
            
              <h2 class="fw-bold mb-2 text-uppercase text-dark">Admin-Login</h2>
             {{#if msg}}
            <p class="error">Login failed</p>
            {{/if}}
             


              <div class="form-outline form-dark mb-4">
                  <label class="text-dark">Email</label>
                <input type="email"  name="Email" id="typeEmailX" class="form-control form-control-lg   bg-dark" required/>
              
              </div>

              <div class="form-outline form-white mb-4">
                  <label class="text-dark">Password</label>
                <input type="password" name="Password" id="typePasswordX" class="form-control form-control-lg  bg-dark" required/>
                
              </div>


              <button class="btn btn-dark btn-lg px-5" style="margin-top:5rem ;" type="submit">Login</button>

              
                
            </div>

           
              </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>